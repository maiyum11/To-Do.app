<%- include ../ejs_files/header.ejs %>
<%- include ../ejs_files/nav_task.ejs %>
<!--The Main content-->
<main class="container">
    <div class="row">
    <div class="col-md-offset-3 col-md-15">
    <br>
    <br>
    <h5>TASK MANAGER</h5>
    <br>
    <br>
    <!--table contains the data-->
    <table class= "table table-bordered table-striped table-hover" background='\media\table_bg.jpg'>
    <tr class="d-flex">
      <th class="text-center text-white col-2">Task</th>
      <th class="text-center text-white col-2">Assigned Date</th>
      <th class="text-center text-white col-2">Due Date</th>
      <th class="text-center text-white col-4">Details</th>
      <th class="text-center text-white col-1">Edit</th>
      <th class="text-center text-white col-1">Delete</th>
    </tr>
    <!--Repeating the template-->
    <% for(let count=0; count < taskmanager.length; count ++) { %>
        <tr class="d-flex">
          <td class="text-center text-white col-2"><%= taskmanager[count].Task %></td>
          <td class="text-center text-white col-2"><%= taskmanager[count].Assigned_date %></td>
          <td class="text-center text-white col-2"><%= taskmanager[count].Due_date %></td>
          <td class="text-center text-white col-4"><%= taskmanager[count].Details %></td>
         
          <td class="text-center col-1">
            <a href="/tasks/edit/<%= taskmanager[count]._id %>"
              class="btn btn-primary">
            <i class="fas fa-pencil-alt"></i></a>
          </td>

           <td class="text-center col-1">
            <a href="/tasks/delete/<%= taskmanager[count]._id %>"
              class="btn btn-danger">
            <i class="fas fa-trash-alt"></i></a>
          </td>

        </tr>
    <% } %>
    </table>
    <a href="/tasks/add" class="btn btn-primary" role="button">
        <i class="fas fa-plus-circle"></i> Add a new Task </a>
</div>
</div>
</main>
<%- include ../ejs_files/bottom_nav.ejs %>
<%- include ../ejs_files/footer.ejs %>