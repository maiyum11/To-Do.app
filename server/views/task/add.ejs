<%- include ../ejs_files/header.ejs %>
<%- include ../ejs_files/main_nav.ejs %>
<!-- Content for the Add page-->
<!--allows the users to add in all the new data-->
<div class="container">
    <div class="row">
    <div class="col-md-offset-3 col-md-6">
        <h1><%= title %></h1>
        <form class="form" method="post">
            <div class="form-group">
                <label for="TaskTextfield"> Task </label>
                <input type="text" class="form-control"
                id="TaskTextfield"
                placeholder="Enter a new Task"
                name="Task" required>
            </div>
            
            <div class="form-group">
                <label for="Assigned_dateTextfield"> Assigned Date </label>
                <input type="text" class="form-control"
                id="Assigned_dateTextfield"
                placeholder="DD/MM/YYYY"
                name="Assigned_date" required>
            </div>
            
            <div class="form-group">
                <label for="Due_dateTextfield"> Due Date </label>
                <input type="text" class="form-control"
                id="Due_dateTextfield"
                placeholder="DD/MM/YYYY" 
                name="Due_date" required>
            </div>
            
            <div class="form-group">
                <label for="DetailsTextfield"> Task Detail </label>
                <textarea type="text" class="form-control"
                id="DetailsTextfield"
                placeholder="Task notes"
                name="Details" required></textarea>
            </div>
            <br>
            <button class="btn btn-warning" type="submit">
                <i class="fas fa-check"></i>
            </button>

            <a href="/tasks" class="btn btn-warning">
                <i class="fas fa-x"></i></a>
        </form>
    </div>
    </div>
</div>
<%- include ../ejs_files/bottom_nav.ejs %>
